<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_video_view_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.zxu.picturesxiangce.weight.CommonVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/user_bg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <EditText
            android:hint="请输入用户名"

            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <EditText
            android:layout_below="@id/user_name"
            android:id="@+id/user_tel"
            android:hint="请输入电话"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <EditText
            android:layout_below="@id/user_tel"
            android:id="@+id/user_pass"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <EditText
            android:layout_below="@id/user_pass"
            android:id="@+id/user_gender"
            android:hint="请输入性别"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <EditText
            android:layout_below="@id/user_gender"
            android:id="@+id/user_declaration"
            android:hint="请输入宣言"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/register_user"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20dp"
            android:text="注     册"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_shape"/>

    </RelativeLayout>
</RelativeLayout>
